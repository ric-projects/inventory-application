<html>
    <head>
        <title>Brands</title>
        <link rel="stylesheet" href="/css/styles.css">
    </head>
    <body>
        <%- include('navbar') %>

        <h3>Brands</h3>
        <div class="itemsWrapper">
            <% items.forEach(item => { %>
            <div class="itemCard">
              <%= item.brand_name %>
              <% const address = "/brand/" + item.brand_id %>
              <% const delBrand = "/delbrand/" + item.brand_id %>
              <% const updBrand = "/updbrand/" + item.brand_id %>
              <a href=<%= address %> ><button>Details</button></a>
              <a href=<%= updBrand %> > <button>Update</button></a>
              <a href=<%= delBrand %> ><button>Delete</button></a>
            </div>
            <% }); %>
        </div>
        <a href="/newbrand">Add New Brand</a>
    </body>
</html>