<html>
    <head>
        <title>Update Item</title>
        <link rel="stylesheet" href="/css/styles.css" />
    </head>
    <body>
        <%- include('navbar') %>
        
        <% const action="/upditem/" + item.id %>
        <form action=<%=action%> method="POST">

            <div class="itemsWrapper">
                <label for="part">
                    Part: <input type="text" name="part" id="part" value="<%= item.part %>" />
                </label>
                <label for="price">
                    Price: <input type="number" name="price" id="price" value=<%=item.price%> />
                </label>
                <label for="category">
                    <select name="category" id="category">
                        <% categories.forEach((cat) => { %>
                            <% if(cat.cat_name === item.cat_name) { %>
                                <option value=<%= cat.cat_name %> selected><%=cat.cat_name%></option>    
                            <% } else { %>
                            <option value=<%= cat.cat_name %> ><%=cat.cat_name%></option>
                        <% }}); %>
                    </select></label>
                <label for="brand">
                    <select name="brand" id="brand">
                        <% brands.forEach((brand) => { %>
                            <% if(brand.brand_name === item.brand_name) { %>
                                <option value=<%= brand.brand_name %> selected> <%=brand.brand_name %>
                            <% } else { %>
                            <option value=<%= brand.brand_name %>> <%=brand.brand_name %>
                            </option>
                        <% }}); %>
                    </select>
                </label>
                <button type="submit">Submit</button>
            </div>
        </form>
    </body>
</html>